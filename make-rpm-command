make clean
perl Makefile.PL
ID=`id -u`;
if [ x"$ID" != x"0" ]
then
	MAKERPMOPTS="$MAKERPMOPTS --nochown"
        export MAKERPMOPTS
fi

DISTFILE=Getopt-Function-0.006.tar.gz
rm $DISTFILE
make
make dist
cp $DISTFILE /usr/src/redhat/SOURCES
/usr/src/redhat/SOURCES/makerpm.pl $MAKERPMOPTS --specs --runtests --auto-desc --source=$DISTFILE
cd /usr/src/redhat
rpm -ba SPECS/Getopt-Function-0.006.spec
